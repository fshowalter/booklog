      %nav.sidebar-nav
        %a{ href: '/', class: "sidebar-nav-item#{' active' if current_page.url == '/' }"} Home
        %a{ href: '/viewings', class: "sidebar-nav-item#{' active' if current_page.url == '/viewings/' }"} Viewing Log
        %a.sidebar-nav-item{ href: 'https://github.com/fshowalter/movielog/tree/gh-pages' } GitHub
    .wrap
      .masthead
        .container
          %h1.masthead-title
            %a{ href: '/', title: 'Home' } 
              #{site.title}
              %small.post-title-slug
                #{site.tagline}
      .container.content
        = yield
      %footer.site-footer
        .site-footer-content
          This has been #{link_to("Frank's Movie Log", '/', class: 'site-footer__link')}, loving movies since 2012.
        %a.site-footer-twitter{ href: 'http://twitter.com/FranksMovieLog'}
