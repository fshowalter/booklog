  %body
    -# Target for toggling the sidebar `.sidebar-checkbox` is for regular styles, `#sidebar-checkbox` for behavior.
    %input#sidebar-checkbox.sidebar-checkbox{ type: 'checkbox' }
    -# Toggleable sidebar
    #sidebar.sidebar
      = form_tag 'https://www.google.com/search', class: 'site-navigation__site-search', method: :get do
        = hidden_field_tag 'q', value: 'site:movielog.frankshowalter.com'
        .search-wrap.clearable-wrap
          = text_field_tag 'q', placeholder: 'Search the Movie Log', id: 'searchInput', class: 'site-search-input', size: '30'
          %svg.search-icon{ viewBox: '-192 -384 2048 2048', xmlns: 'http://www.w3.org/2000/svg' }
            %g{ transform: 'scale(1 -1) translate(0 -1280)' }
