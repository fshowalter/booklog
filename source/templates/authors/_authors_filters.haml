.authors_filters{ data: { filter_controls: true, target: '.authors_list' } }
  %h2.authors_filters-heading Filter and Sort
  .authors_filters-content
    = text_filter(placeholder: 'Enter all or part of a name', attribute: 'data-name', label: 'Name')
    = sort_filter(label: 'Order By',
                  attribute: 'sort-name-asc',
                  target: '.authors_list',
                  options: [['Name (A-Z)', 'sort-name-asc'],
                            ['Name (Z-A)', 'sort-name-desc'],
                            ['Review Count (Most First)', 'review-count-desc'],
                            ['Review Count (Fewest First)', 'review-count-asc']])
