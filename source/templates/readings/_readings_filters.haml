  published_years = Booklog.readings.map(&:year_published).sort
  oldest_year = published_years.first
  newest_year = published_years.last


.readings_filters{ data: { filter_controls: true, target: '#readings' } }
  %h2.readings_filters-heading Filter and Sort
  .readings_filters-content
    = text_filter(placeholder: 'Enter all or part of a title', attribute: 'data-title', label: 'Title')
    = range_filter(label: 'Year Published', attribute: 'data-year-published', min: oldest_year, max: newest_year)
    = sort_filter(label: 'Order By',
                  attribute: 'reading-date-desc',
                  target: '#readings',
                  options: [['Date Finished (Newest First)', 'date-finished-desc'],
                            ['Date Finished (Oldest First)', 'date-finished-asc'],
                            ['Year Published (Newest First)', 'year-published-desc'],
                            ['Year Published (Oldest First)', 'year-published-asc'],
                            %w(Title sort-title-asc)])
